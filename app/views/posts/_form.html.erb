
<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <br>
  <%= f.text_area :content %>
  <br>
  <%= f.label :categories %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br>
  <%= f.fields_for :categories do |category_fields| %>
    New Category:
    <%= category_fields.text_field :name %>
  <% end %>
  <br>
  <%= f.submit "#{action} Post"%>
<% end %>